{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "runnerty-executor-confirm",
  "definitions": {
    "config":
      { "type": "object",
        "required": ["id","type","token","chatId"],
        "properties":{
          "id": {"type": "string"},
          "type": {"type": "string", "pattern": "runnerty-executor-confirm"},
          "token":{"type":"string"},
          "chatId":{"type":"string"}
      }
    },
    "params":
    { "type": "object",
      "required": ["id","processId","message","confirm_button_message","cancel_button_message","confirm_message", "cancel_message"],
      "properties":{
        "id": {"type": "string"},
        "message": {"type": "string"},
        "confirm_button_message": {"type": "string"},
        "cancel_button_message": {"type": "string"},
        "confirm_message": {"type": "string"},
        "cancel_message": {"type": "string"},
        "action_on_timeout":{"type":"string", "pattern": "ok"},
        "authorized_users": {"type": "array"}
      }
    }
  }
}